rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Auth Helper
    function isSignedIn() {
      return request.auth != null;
    }

    // User's private analyses
    match /analyses/{analysisId} {
      allow read, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId;
      
      // Collaborative comments within an analysis
      match /comments/{commentId} {
        allow read: if isSignedIn(); // Allow reading if part of an analysis you can see
        allow create: if isSignedIn();
      }
    }

    // Organizations
    match /organizations/{orgId} {
      allow read: if isSignedIn(); // Simple read, but actual members list is protected
      allow write: if isSignedIn(); 
      
      match /members/{memberId} {
        allow read, write: if isSignedIn();
      }
      
      match /clusters/{clusterId} {
        allow read, write: if isSignedIn();
      }
    }

    // Membership verification
    match /memberships/{membershipId} {
      allow read: if isSignedIn() && request.auth.uid == resource.data.uid;
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.uid;
      allow delete: if isSignedIn() && request.auth.uid == resource.data.uid;
    }
  }
}
